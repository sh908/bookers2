 <%= flash[:success] %>
<%= render 'books/list',user: @user %>
<%= render 'books/form', book: @book_new %>



<div class = "container">
  <div class = "row">
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-hover table-inverse">

<tbody>

 <tr>
  <td><%=link_to user_path(@book.user.id) do %>
      <%=@book.user.name %>
      <%=attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpeg"%>
      <% end %>
   </td>

  <td>
  <span><%= link_to @book.title, book_path(@book.id) %></span>
  </td>
  <td>
  <span><%= @book.body %></span>
  </td>
  <td>
  <% if @book.user== current_user %>
  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
  </td>
  <td>
  <%= link_to "Destroy", book_path(@book), method: :delete,class: "btn btn-danger" %>
  <% end %>
  </td>
 </tr>
 </tbody>
</table>

</div>
</div>
</div>